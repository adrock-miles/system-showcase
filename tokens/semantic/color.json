{
  "semantic": {
    "color": {
      "background": {
        "primary":   { "$value": "{color.white}",    "$type": "color", "$description": "Main page background" },
        "secondary": { "$value": "{color.gray.50}",  "$type": "color", "$description": "Subtle section background" },
        "tertiary":  { "$value": "{color.gray.100}", "$type": "color", "$description": "Nested section background" },
        "inverse":   { "$value": "{color.gray.900}", "$type": "color", "$description": "Dark background for contrast sections" },
        "overlay":   { "$value": "{color.black}",    "$type": "color", "$description": "Modal/drawer backdrop (use with opacity)" }
      },
      "surface": {
        "default":  { "$value": "{color.white}",    "$type": "color", "$description": "Card, modal, popover surfaces" },
        "raised":   { "$value": "{color.white}",    "$type": "color", "$description": "Elevated surfaces" },
        "overlay":  { "$value": "{color.white}",    "$type": "color", "$description": "Overlay surfaces (tooltips, dropdowns)" },
        "sunken":   { "$value": "{color.gray.50}",  "$type": "color", "$description": "Recessed/sunken surfaces" }
      },
      "text": {
        "primary":   { "$value": "{color.gray.900}", "$type": "color", "$description": "Primary body text" },
        "secondary": { "$value": "{color.gray.600}", "$type": "color", "$description": "Secondary/supporting text" },
        "tertiary":  { "$value": "{color.gray.500}", "$type": "color", "$description": "Hints, captions, timestamps" },
        "disabled":  { "$value": "{color.gray.400}", "$type": "color", "$description": "Disabled state text" },
        "inverse":   { "$value": "{color.white}",    "$type": "color", "$description": "Text on dark backgrounds" },
        "link":      { "$value": "{color.blue.600}", "$type": "color", "$description": "Hyperlinks" },
        "linkHover": { "$value": "{color.blue.700}", "$type": "color", "$description": "Hovered hyperlinks" }
      },
      "border": {
        "default":   { "$value": "{color.gray.200}", "$type": "color", "$description": "Default borders and dividers" },
        "subtle":    { "$value": "{color.gray.100}", "$type": "color", "$description": "Very subtle borders" },
        "strong":    { "$value": "{color.gray.400}", "$type": "color", "$description": "Stronger borders for emphasis" },
        "focus":     { "$value": "{color.blue.500}", "$type": "color", "$description": "Keyboard focus ring" },
        "error":     { "$value": "{color.red.500}",  "$type": "color", "$description": "Error state border" },
        "success":   { "$value": "{color.green.500}","$type": "color", "$description": "Success state border" }
      },
      "feedback": {
        "success":        { "$value": "{color.green.500}", "$type": "color", "$description": "Success status" },
        "successBg":      { "$value": "{color.green.50}",  "$type": "color", "$description": "Success background" },
        "successText":    { "$value": "{color.green.700}", "$type": "color", "$description": "Success text" },
        "warning":        { "$value": "{color.yellow.500}","$type": "color", "$description": "Warning status" },
        "warningBg":      { "$value": "{color.yellow.50}", "$type": "color", "$description": "Warning background" },
        "warningText":    { "$value": "{color.yellow.700}","$type": "color", "$description": "Warning text" },
        "error":          { "$value": "{color.red.500}",   "$type": "color", "$description": "Error status" },
        "errorBg":        { "$value": "{color.red.50}",    "$type": "color", "$description": "Error background" },
        "errorText":      { "$value": "{color.red.700}",   "$type": "color", "$description": "Error text" },
        "info":           { "$value": "{color.blue.500}",  "$type": "color", "$description": "Info status" },
        "infoBg":         { "$value": "{color.blue.50}",   "$type": "color", "$description": "Info background" },
        "infoText":       { "$value": "{color.blue.700}",  "$type": "color", "$description": "Info text" }
      },
      "action": {
        "primary":          { "$value": "{color.blue.600}", "$type": "color", "$description": "Primary button background" },
        "primaryHover":     { "$value": "{color.blue.700}", "$type": "color", "$description": "Primary button hover" },
        "primaryActive":    { "$value": "{color.blue.800}", "$type": "color", "$description": "Primary button active/pressed" },
        "primaryForeground":{ "$value": "{color.white}",    "$type": "color", "$description": "Text/icon on primary action" },
        "secondary":        { "$value": "{color.gray.100}", "$type": "color", "$description": "Secondary button background" },
        "secondaryHover":   { "$value": "{color.gray.200}", "$type": "color", "$description": "Secondary button hover" },
        "secondaryActive":  { "$value": "{color.gray.300}", "$type": "color", "$description": "Secondary button active" },
        "destructive":      { "$value": "{color.red.600}",  "$type": "color", "$description": "Destructive action background" },
        "destructiveHover": { "$value": "{color.red.700}",  "$type": "color", "$description": "Destructive action hover" }
      }
    }
  }
}
