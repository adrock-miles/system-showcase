{
  "font": {
    "family": {
      "sans": {
        "$value": "Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "$type": "fontFamily",
        "$description": "Primary sans-serif font stack"
      },
      "serif": {
        "$value": "'Georgia', 'Times New Roman', serif",
        "$type": "fontFamily",
        "$description": "Serif font for editorial content"
      },
      "mono": {
        "$value": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', Consolas, 'Courier New', monospace",
        "$type": "fontFamily",
        "$description": "Monospace font for code"
      }
    },
    "size": {
      "xs":   { "$value": "12px", "$type": "dimension", "$description": "Extra small — labels, captions, badges" },
      "sm":   { "$value": "14px", "$type": "dimension", "$description": "Small — secondary text, metadata" },
      "base": { "$value": "16px", "$type": "dimension", "$description": "Base body text size" },
      "lg":   { "$value": "18px", "$type": "dimension", "$description": "Large body text" },
      "xl":   { "$value": "20px", "$type": "dimension", "$description": "Subheadings" },
      "2xl":  { "$value": "24px", "$type": "dimension", "$description": "Section headings" },
      "3xl":  { "$value": "30px", "$type": "dimension", "$description": "Page headings" },
      "4xl":  { "$value": "36px", "$type": "dimension", "$description": "Display headings" },
      "5xl":  { "$value": "48px", "$type": "dimension", "$description": "Hero headings" },
      "6xl":  { "$value": "60px", "$type": "dimension", "$description": "Large display text" },
      "7xl":  { "$value": "72px", "$type": "dimension", "$description": "Giant display text" }
    },
    "weight": {
      "thin":       { "$value": "100", "$type": "fontWeight", "$description": "Thin weight" },
      "light":      { "$value": "300", "$type": "fontWeight", "$description": "Light weight" },
      "regular":    { "$value": "400", "$type": "fontWeight", "$description": "Regular body weight" },
      "medium":     { "$value": "500", "$type": "fontWeight", "$description": "Medium emphasis" },
      "semibold":   { "$value": "600", "$type": "fontWeight", "$description": "Semi-bold for UI labels" },
      "bold":       { "$value": "700", "$type": "fontWeight", "$description": "Bold for headings" },
      "extrabold":  { "$value": "800", "$type": "fontWeight", "$description": "Extra bold" },
      "black":      { "$value": "900", "$type": "fontWeight", "$description": "Heaviest weight" }
    },
    "lineHeight": {
      "none":     { "$value": "1",    "$type": "number", "$description": "No leading" },
      "tight":    { "$value": "1.25", "$type": "number", "$description": "Tight — headings" },
      "snug":     { "$value": "1.375","$type": "number", "$description": "Snug" },
      "normal":   { "$value": "1.5",  "$type": "number", "$description": "Normal body text" },
      "relaxed":  { "$value": "1.625","$type": "number", "$description": "Relaxed reading" },
      "loose":    { "$value": "2",    "$type": "number", "$description": "Loose — widely spaced" }
    },
    "letterSpacing": {
      "tighter": { "$value": "-0.05em", "$type": "dimension", "$description": "Very tight tracking" },
      "tight":   { "$value": "-0.025em","$type": "dimension", "$description": "Tight — display headings" },
      "normal":  { "$value": "0em",     "$type": "dimension", "$description": "Normal tracking" },
      "wide":    { "$value": "0.025em", "$type": "dimension", "$description": "Wide — small caps" },
      "wider":   { "$value": "0.05em",  "$type": "dimension", "$description": "Wider" },
      "widest":  { "$value": "0.1em",   "$type": "dimension", "$description": "Widest — allcaps labels" }
    }
  }
}
